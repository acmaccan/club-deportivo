<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_light"
    tools:context=".activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Header -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/icon_arrow_back"
            app:title="@string/profile_my_profile" />

        <!-- Membership card -->
        <com.example.club_deportivo.ui.CustomProfileMembershipCard
            android:id="@+id/profile_membership_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary_light" />

        <!-- Personal info -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_personal_info"
                    android:textColor="@color/neutral_main"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Name -->
                <include
                    layout="@layout/component_profile_info_item"
                    android:id="@+id/info_name" />

                <!-- Document -->
                <include
                    layout="@layout/component_profile_info_item"
                    android:id="@+id/info_document" />

                <!-- Email -->
                <include
                    layout="@layout/component_profile_info_item"
                    android:id="@+id/info_email" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Close session button -->
        <com.example.club_deportivo.ui.CustomButton
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:buttonText="@string/profile_close_session"
            app:buttonColor="danger"
            app:buttonVariant="filled"
            app:buttonState="enabled"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
